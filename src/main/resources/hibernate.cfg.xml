<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory name="pscsdb">
        <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
        <property name="hibernate.connection.password">jubureba</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:pscsdb</property>
        <property name="hibernate.connection.username">SYSTEM</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        
        <property name="hibernate.default_schema">SYSTEM</property>
        <property name="hbm2ddl.auto">create</property>
    </session-factory>
</hibernate-configuration>
